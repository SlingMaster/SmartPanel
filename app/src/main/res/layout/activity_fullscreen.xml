<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:keepScreenOn="true"
    tools:context="com.jsc.smartpanel.FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.jsc.smartpanel.html.CustomWebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/fullscreen_content_controls"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_x="0dp"
                android:layout_y="-1dp"
                android:gravity="bottom"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

            </LinearLayout>
        </com.jsc.smartpanel.html.CustomWebView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:fitsSystemWindows="false"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/splash_height"
            android:layout_marginTop="@dimen/splash_margin"
            android:layout_marginBottom="@dimen/def_margin"
            android:adjustViewBounds="false"
            android:contentDescription="@string/empty"
            android:cropToPadding="false"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/splash" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ic_launcher_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/def_margin"
            android:fitsSystemWindows="false"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_radio"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/ic_launcher_size"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/btn_margin"
                android:layout_marginRight="@dimen/btn_margin"
                android:background="@drawable/btn_radio"
                android:focusable="false"
                android:visibility="visible" />


            <Button
                android:id="@+id/btn_smart"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/ic_launcher_size"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/btn_margin"
                android:layout_marginRight="@dimen/btn_margin"
                android:background="@drawable/btn_smart"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_stats"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/ic_launcher_size"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/btn_margin"
                android:layout_marginRight="@dimen/btn_margin"
                android:background="@drawable/btn_stats"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_timer"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/ic_launcher_size"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/btn_margin"
                android:layout_marginRight="@dimen/btn_margin"
                android:background="@drawable/btn_timer"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_weather"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/ic_launcher_size"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/btn_margin"
                android:layout_marginRight="@dimen/btn_margin"
                android:background="@drawable/btn_weather"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_sling"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/ic_launcher_size"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/btn_margin"
                android:layout_marginRight="@dimen/btn_margin"
                android:background="@drawable/btn_sling"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_wifi"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/ic_launcher_size"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/btn_margin"
                android:layout_marginRight="@dimen/btn_margin"
                android:background="@drawable/btn_wifi"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_settings"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="@dimen/ic_launcher_size"

                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/btn_margin"
                android:layout_marginRight="@dimen/btn_margin"
                android:background="@drawable/btn_settings"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnShowCtrl"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="@android:dimen/app_icon_size"

        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginLeft="@dimen/btn_margin"
        android:layout_marginRight="@dimen/btn_margin"
        android:layout_marginBottom="@dimen/def_margin"
        android:background="@drawable/btn_more"
        android:focusable="false"
        android:gravity="center_horizontal"
        style="?android:attr/buttonBarButtonStyle"
        android:visibility="visible" />

    <TextView
        android:id="@+id/memInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingLeft="@dimen/debug_panel_padding"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:paddingRight="@dimen/debug_panel_padding"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"
        android:text="@string/empty"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="18sp"
        tools:text="@string/about_app_title" />

<!--        <FrameLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:fitsSystemWindows="true">-->

<!--        </FrameLayout>-->

</FrameLayout>
