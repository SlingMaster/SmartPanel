<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:keepScreenOn="true"
    tools:context="com.jsc.smartpanel.FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->


    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.jsc.smartpanel.html.CustomWebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </com.jsc.smartpanel.html.CustomWebView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:fitsSystemWindows="false"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/splash_height"
            android:layout_marginTop="@dimen/splash_margin"
            android:layout_marginBottom="@dimen/webview_top"
            android:adjustViewBounds="false"
            android:contentDescription="@string/empty"
            android:cropToPadding="false"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/splash" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/def_margin"
            android:fitsSystemWindows="true"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/ic_padding"
            android:paddingRight="@dimen/ic_padding"
            android:visibility="visible">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="0dp"
                android:layout_height="@dimen/ic_launcher_size"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:contentDescription="@string/ic_desc"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/btn_radio" />

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="0dp"
                android:layout_height="@dimen/ic_launcher_size"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:contentDescription="@string/ic_desc"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/btn_smart" />

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="0dp"
                android:layout_height="@dimen/ic_launcher_size"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:contentDescription="@string/ic_desc"
                android:foregroundGravity="center"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/btn_stats" />

            <ImageView
                android:id="@+id/icon4"
                android:layout_width="0dp"
                android:layout_height="@dimen/ic_launcher_size"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:contentDescription="@string/ic_desc"
                android:foregroundGravity="center"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/btn_timer" />

            <ImageView
                android:id="@+id/icon5"
                android:layout_width="0dp"
                android:layout_height="@dimen/ic_launcher_size"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:contentDescription="@string/ic_desc"
                android:fadingEdge="horizontal"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/btn_weather" />

            <ImageView
                android:id="@+id/icon6"
                android:layout_width="0dp"
                android:layout_height="@dimen/ic_launcher_size"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:contentDescription="@string/ic_desc"
                android:fadingEdge="horizontal"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/btn_sling" />

            <ImageView
                android:id="@+id/icon8"
                android:layout_width="0dp"
                android:layout_height="@dimen/ic_launcher_size"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:contentDescription="@string/ic_desc"
                android:fadingEdge="horizontal"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_debug" />

            <ImageView
                android:id="@+id/icon7"
                android:layout_width="0dp"
                android:layout_height="@dimen/ic_launcher_size"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:contentDescription="@string/ic_desc"
                android:fadingEdge="horizontal"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/btn_preset" />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/btnShowCtrl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ic_launcher_size"
        android:layout_gravity="bottom"
        android:background="@android:color/black"
        android:contentDescription="@string/ic_desc"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_more" />

    <TextView
        android:id="@+id/memInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingLeft="@dimen/debug_panel_padding"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:paddingRight="@dimen/debug_panel_padding"
        android:paddingBottom="@dimen/nav_header_vertical_spacing"
        android:text="@string/empty"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="18sp"
        tools:text="@string/about_app_title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
